<div class="chat-fab" id="chatFab">
  <button class="chat-main-btn" id="chatMainBtn" aria-label="채팅 상담" aria-expanded="false">
    <svg class="chat-icon" width="28" height="28" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
      <path d="M21 15a2 2 0 0 1-2 2H7l-4 4V5a2 2 0 0 1 2-2h14a2 2 0 0 1 2 2z"></path>
    </svg>
    <svg class="close-icon" width="28" height="28" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" style="display: none;">
      <line x1="18" y1="6" x2="6" y2="18"></line>
      <line x1="6" y1="6" x2="18" y2="18"></line>
    </svg>
  </button>

  <div class="chat-options" id="chatOptions">
    <a href="https://talk.naver.com/ct/deckctr" target="_blank" rel="noopener noreferrer" class="chat-option naver-talk" aria-label="네이버 톡톡으로 상담">
      <svg width="24" height="24" viewBox="0 0 24 24" fill="currentColor">
        <path d="M16.273 12.845L7.376 0H0v24h7.727V11.155L16.624 24H24V0h-7.727v12.845z"/>
      </svg>
      <span>네이버 톡톡</span>
    </a>
    <a href="https://pf.kakao.com/_deckctr/chat" target="_blank" rel="noopener noreferrer" class="chat-option kakao-talk" aria-label="카카오톡으로 상담">
      <svg width="24" height="24" viewBox="0 0 24 24" fill="currentColor">
        <path d="M12 3c-5.523 0-10 3.582-10 8 0 2.845 1.888 5.34 4.727 6.756-.147.534-.552 2.013-.633 2.323-.098.378.139.372.293.271.121-.08 1.927-1.31 2.709-1.84.941.136 1.912.206 2.904.206 5.523 0 10-3.582 10-8s-4.477-8-10-8z"/>
      </svg>
      <span>카카오톡</span>
    </a>
    <a href="tel:010-0000-0000" class="chat-option phone-call" aria-label="전화 상담">
      <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
        <path d="M22 16.92v3a2 2 0 0 1-2.18 2 19.79 19.79 0 0 1-8.63-3.07 19.5 19.5 0 0 1-6-6 19.79 19.79 0 0 1-3.07-8.67A2 2 0 0 1 4.11 2h3a2 2 0 0 1 2 1.72 12.84 12.84 0 0 0 .7 2.81 2 2 0 0 1-.45 2.11L8.09 9.91a16 16 0 0 0 6 6l1.27-1.27a2 2 0 0 1 2.11-.45 12.84 12.84 0 0 0 2.81.7A2 2 0 0 1 22 16.92z"/>
      </svg>
      <span>전화 상담</span>
    </a>
  </div>
</div>

<style>
  .chat-fab {
    position: fixed;
    bottom: 2rem;
    right: 2rem;
    z-index: var(--z-modal);
    display: flex;
    flex-direction: column;
    align-items: flex-end;
    gap: 0.75rem;
  }

  .chat-main-btn {
    width: 60px;
    height: 60px;
    border-radius: 50%;
    background: linear-gradient(135deg, var(--color-accent) 0%, var(--color-accent-light) 100%);
    border: none;
    cursor: pointer;
    display: flex;
    align-items: center;
    justify-content: center;
    color: white;
    box-shadow: 0 4px 20px rgba(0, 66, 80, 0.4);
    transition: all 0.3s ease;
  }

  .chat-main-btn:hover {
    transform: scale(1.1);
    box-shadow: 0 6px 28px rgba(0, 66, 80, 0.5);
  }

  .chat-main-btn.active .chat-icon {
    display: none;
  }

  .chat-main-btn.active .close-icon {
    display: block !important;
  }

  .chat-options {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
    opacity: 0;
    visibility: hidden;
    transform: translateY(20px);
    transition: all 0.3s ease;
    pointer-events: none;
  }

  .chat-options.active {
    opacity: 1;
    visibility: visible;
    transform: translateY(0);
    pointer-events: auto;
  }

  .chat-option {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    padding: 0.875rem 1.25rem;
    background: white;
    border-radius: 50px;
    box-shadow: 0 4px 16px rgba(0, 0, 0, 0.12);
    color: var(--color-primary);
    text-decoration: none;
    font-weight: 600;
    font-size: 0.9rem;
    transition: all 0.2s ease;
    white-space: nowrap;
  }

  .chat-option:hover {
    transform: translateX(-4px);
    box-shadow: 0 6px 24px rgba(0, 0, 0, 0.15);
  }

  .chat-option.naver-talk:hover {
    background: #03C75A;
    color: white;
  }

  .chat-option.kakao-talk:hover {
    background: #FEE500;
    color: #191919;
  }

  .chat-option.phone-call:hover {
    background: var(--color-accent);
    color: white;
  }

  /* Dark mode */
  :global([data-theme="dark"]) .chat-option {
    background: var(--color-gray-100);
    box-shadow: 0 4px 16px rgba(0, 0, 0, 0.4);
  }

  /* Mobile */
  @media (max-width: 480px) {
    .chat-fab {
      bottom: 1.5rem;
      right: 1rem;
    }

    .chat-main-btn {
      width: 56px;
      height: 56px;
    }

    .chat-option {
      padding: 0.75rem 1rem;
      font-size: 0.85rem;
    }
  }
</style>

<script>
  function initChatButton() {
    const mainBtn = document.getElementById('chatMainBtn');
    const options = document.getElementById('chatOptions');

    if (!mainBtn || !options) return;

    function toggleChat() {
      const isActive = mainBtn.classList.contains('active');
      mainBtn.classList.toggle('active');
      options.classList.toggle('active');
      mainBtn.setAttribute('aria-expanded', (!isActive).toString());
    }

    function closeChat() {
      mainBtn.classList.remove('active');
      options.classList.remove('active');
      mainBtn.setAttribute('aria-expanded', 'false');
    }

    mainBtn.addEventListener('click', toggleChat);

    // Close on click outside
    document.addEventListener('click', (e) => {
      const fab = document.getElementById('chatFab');
      if (fab && !fab.contains(e.target as Node)) {
        closeChat();
      }
    });

    // Close on Escape
    document.addEventListener('keydown', (e) => {
      if (e.key === 'Escape') {
        closeChat();
      }
    });

    // Close on scroll
    let lastScrollY = window.scrollY;
    window.addEventListener('scroll', () => {
      if (Math.abs(window.scrollY - lastScrollY) > 100) {
        closeChat();
        lastScrollY = window.scrollY;
      }
    }, { passive: true });
  }

  // Initialize
  initChatButton();

  // Reinitialize after View Transitions
  document.addEventListener('astro:page-load', initChatButton);
</script>
