---
interface Props {
  name: string;
  company: string;
  content: string;
  rating?: number;
  project?: string;
}

const { name, company, content, rating = 5, project } = Astro.props;
---

<div class="testimonial-card">
  <div class="quote-icon">
    <svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" viewBox="0 0 24 24" fill="currentColor">
      <path d="M11.192 15.757c0-.88-.23-1.618-.69-2.217-.326-.412-.768-.683-1.327-.812-.55-.128-1.07-.137-1.54-.028-.16-.95.1-1.956.76-3.022.66-1.065 1.515-1.867 2.558-2.403L9.373 5c-.8.396-1.56.898-2.26 1.505-.71.607-1.34 1.305-1.9 2.094s-.98 1.68-1.25 2.69-.346 2.04-.217 3.1c.168 1.4.62 2.52 1.356 3.35.735.84 1.652 1.26 2.748 1.26.965 0 1.766-.29 2.4-.878.628-.576.94-1.365.94-2.368l.002.003zm9.124 0c0-.88-.23-1.618-.69-2.217-.326-.42-.768-.695-1.327-.825-.55-.13-1.07-.14-1.54-.03-.16-.94.09-1.95.75-3.02.66-1.06 1.514-1.86 2.557-2.4L18.49 5c-.8.396-1.555.898-2.26 1.505-.708.607-1.34 1.305-1.894 2.094-.556.79-.97 1.68-1.24 2.69-.273 1-.345 2.04-.217 3.1.165 1.4.615 2.52 1.35 3.35.732.833 1.646 1.25 2.742 1.25.967 0 1.768-.29 2.402-.876.627-.576.942-1.365.942-2.368v.01z"/>
    </svg>
  </div>

  <div class="testimonial-content">
    <p class="testimonial-text">{content}</p>

    {rating && (
      <div class="rating">
        {[...Array(5)].map((_, i) => (
          <svg
            class={`star ${i < rating ? 'filled' : ''}`}
            xmlns="http://www.w3.org/2000/svg"
            width="16"
            height="16"
            viewBox="0 0 24 24"
            fill={i < rating ? 'currentColor' : 'none'}
            stroke="currentColor"
            stroke-width="2"
          >
            <polygon points="12 2 15.09 8.26 22 9.27 17 14.14 18.18 21.02 12 17.77 5.82 21.02 7 14.14 2 9.27 8.91 8.26 12 2"/>
          </svg>
        ))}
      </div>
    )}
  </div>

  <div class="testimonial-author">
    <div class="author-avatar">
      {name.charAt(0)}
    </div>
    <div class="author-info">
      <strong class="author-name">{name}</strong>
      <span class="author-company">{company}</span>
      {project && <span class="author-project">{project}</span>}
    </div>
  </div>
</div>

<style>
  .testimonial-card {
    background: white;
    border-radius: 16px;
    padding: 2rem;
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.06);
    border: 1px solid var(--color-gray-100);
    transition: all 0.3s ease;
    display: flex;
    flex-direction: column;
    height: 100%;
  }

  .testimonial-card:hover {
    transform: translateY(-4px);
    box-shadow: 0 8px 30px rgba(0, 0, 0, 0.1);
  }

  .quote-icon {
    color: var(--color-accent);
    opacity: 0.3;
    margin-bottom: 1rem;
  }

  .testimonial-content {
    flex: 1;
  }

  .testimonial-text {
    font-size: 1.05rem;
    line-height: 1.75;
    color: var(--color-text);
    margin-bottom: 1rem;
  }

  .rating {
    display: flex;
    gap: 0.25rem;
    margin-bottom: 1.5rem;
  }

  .star {
    color: #fbbf24;
  }

  .star:not(.filled) {
    color: var(--color-gray-200);
  }

  .testimonial-author {
    display: flex;
    align-items: center;
    gap: 1rem;
    padding-top: 1.5rem;
    border-top: 1px solid var(--color-gray-100);
  }

  .author-avatar {
    width: 48px;
    height: 48px;
    background: linear-gradient(135deg, var(--color-accent) 0%, var(--color-accent-light) 100%);
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    color: white;
    font-weight: 700;
    font-size: 1.2rem;
  }

  .author-info {
    display: flex;
    flex-direction: column;
  }

  .author-name {
    font-size: 1rem;
    color: var(--color-primary);
  }

  .author-company {
    font-size: 0.85rem;
    color: var(--color-text-light);
  }

  .author-project {
    font-size: 0.8rem;
    color: var(--color-accent);
    margin-top: 0.25rem;
  }

  @media (max-width: 768px) {
    .testimonial-card {
      padding: 1.5rem;
    }

    .testimonial-text {
      font-size: 1rem;
    }
  }
</style>
