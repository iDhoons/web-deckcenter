<style>
  footer {
    background: #1a1a1a;
    color: white;
    padding: 3rem 2rem 1rem;
    margin-top: 4rem;
  }

  /* Dark mode footer - even darker */
  :global([data-theme="dark"]) footer {
    background: #0a0a0a;
  }

  .footer-content {
    max-width: 1200px;
    margin: 0 auto;
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    gap: 2rem;
  }

  .footer-section h3 {
    color: white;
    margin-bottom: 0.5rem;
  }

  .footer-section h4 {
    color: rgba(255,255,255,0.9);
    margin-bottom: 0.75rem;
    font-size: 1rem;
  }

  .footer-section ul {
    list-style: none;
  }

  .footer-section li {
    margin-bottom: 0.5rem;
  }

  .footer-section a {
    color: rgba(255,255,255,0.7);
    font-size: 0.9rem;
  }

  .footer-section a:hover {
    color: white;
  }

  .social-links {
    display: flex;
    gap: 1rem;
    margin-top: 1rem;
  }

  .social-links a {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 40px;
    height: 40px;
    background: rgba(255,255,255,0.1);
    border-radius: 50%;
    color: rgba(255,255,255,0.8);
    transition: all 0.3s ease;
  }

  .social-links a:hover {
    background: var(--color-accent);
    color: white;
    transform: translateY(-3px);
  }

  .social-links svg {
    width: 20px;
    height: 20px;
  }

  .footer-bottom {
    max-width: 1200px;
    margin: 2rem auto 0;
    padding-top: 1rem;
    border-top: 1px solid rgba(255,255,255,0.1);
    text-align: center;
    font-size: 0.85rem;
    color: rgba(255,255,255,0.6);
  }
</style>
