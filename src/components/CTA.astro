---
interface Props {
  text: string;
  link: string;
  variant?: 'primary' | 'secondary';
}

const { text, link, variant = 'primary' } = Astro.props;
---

<a href={link} class={`cta cta-${variant}`} target={link.startsWith('http') ? '_blank' : ''} rel={link.startsWith('http') ? 'noopener noreferrer' : ''}>
  {text}
</a>

<style>
  .cta {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    padding: 0.875rem 1.75rem;
    border-radius: var(--radius-md);
    font-weight: 600;
    font-size: var(--font-size-base);
    text-align: center;
    text-decoration: none;
    transition: var(--transition-base);
    cursor: pointer;
  }

  .cta-primary {
    background: var(--color-accent);
    color: var(--color-white);
    border: none;
  }

  .cta-primary:hover {
    background: var(--color-accent-dark);
  }

  .cta-secondary {
    background: transparent;
    color: var(--color-text);
    border: 1px solid var(--color-border);
  }

  .cta-secondary:hover {
    border-color: var(--color-accent);
    color: var(--color-accent);
  }

  /* Dark mode */
  :global([data-theme="dark"]) .cta-primary {
    background: var(--color-accent);
    color: var(--color-black);
  }

  :global([data-theme="dark"]) .cta-primary:hover {
    background: var(--color-accent-light);
  }
</style>
