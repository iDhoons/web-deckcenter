---
interface Props {
  text: string;
  link: string;
  variant?: 'primary' | 'secondary';
}

const { text, link, variant = 'primary' } = Astro.props;
---

<a href={link} class={`cta cta-${variant}`} target={link.startsWith('http') ? '_blank' : ''} rel={link.startsWith('http') ? 'noopener noreferrer' : ''}>
  {text}
</a>

<style>
  .cta {
    display: inline-block;
    padding: 0.75rem 2rem;
    border-radius: 4px;
    font-weight: 600;
    font-size: 1rem;
    text-align: center;
    transition: all 0.2s;
  }

  .cta-primary {
    background: var(--color-accent);
    color: white;
  }

  .cta-primary:hover {
    background: #7a4e23;
  }

  .cta-secondary {
    background: var(--color-primary);
    color: white;
  }

  .cta-secondary:hover {
    background: #1a1a1a;
  }
</style>
