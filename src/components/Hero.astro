---
interface Props {
  title: string;
  description: string;
  ctaText?: string;
  ctaLink?: string;
  image?: string;
  youtubeId?: string;
}

const { title, description, ctaText, ctaLink, image, youtubeId } = Astro.props;
---

<section class="hero">
  <div class="hero-content">
    <h1>{title}</h1>
    <p>{description}</p>
    {ctaText && ctaLink && (
      <a href={ctaLink} class="cta">{ctaText}</a>
    )}
  </div>
  <div class="hero-media">
    {youtubeId ? (
      <div class="video-container">
        <iframe
          src={`https://www.youtube.com/embed/${youtubeId}?autoplay=1&mute=1&loop=1&playlist=${youtubeId}&controls=0&showinfo=0&rel=0&modestbranding=1`}
          title={title}
          frameborder="0"
          allow="autoplay; encrypted-media"
          allowfullscreen
        ></iframe>
      </div>
    ) : image ? (
      <img src={image} alt={title} loading="eager" />
    ) : null}
  </div>
</section>

<style>
  .hero {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 3rem;
    padding: 4rem 2rem;
    max-width: 1200px;
    margin: 0 auto;
    align-items: center;
    min-height: 60vh;
  }

  .hero-content h1 {
    color: var(--color-primary);
    margin-bottom: 1.5rem;
  }

  .hero-content p {
    font-size: 1.25rem;
    color: #666;
    margin-bottom: 2rem;
  }

  .cta {
    display: inline-block;
    background: var(--color-accent);
    color: white;
    padding: 0.75rem 2rem;
    border-radius: 4px;
    font-weight: 600;
    font-size: 1rem;
  }

  .cta:hover {
    background: #7a4e23;
  }

  .hero-media img {
    border-radius: 8px;
    box-shadow: 0 4px 6px rgba(0,0,0,0.1);
  }

  .video-container {
    position: relative;
    width: 100%;
    padding-bottom: 56.25%;
    border-radius: 8px;
    overflow: hidden;
    box-shadow: 0 4px 6px rgba(0,0,0,0.1);
  }

  .video-container iframe {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    border: none;
  }

  @media (max-width: 768px) {
    .hero {
      grid-template-columns: 1fr;
      text-align: center;
      padding: 2rem 1rem;
    }

    .hero-media {
      order: -1;
    }
  }
</style>
