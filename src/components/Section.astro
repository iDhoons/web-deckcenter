---
interface Props {
  title?: string;
  description?: string;
  variant?: 'default' | 'alt';
}

const { title, description, variant = 'default' } = Astro.props;
---

<section class:list={["section", variant === 'alt' && "section-alt"]}>
  <div class="section-content">
    {title && <h2>{title}</h2>}
    {description && <p class="section-description">{description}</p>}
    <slot />
  </div>
</section>

<style>
  .section {
    padding: var(--section-spacing) var(--container-padding);
  }

  .section-alt {
    background: var(--color-bg-secondary);
  }

  .section-content {
    max-width: var(--max-width);
    margin: 0 auto;
  }

  .section h2 {
    margin-bottom: 1rem;
    font-size: var(--font-size-3xl);
  }

  .section-description {
    max-width: 720px;
    margin-bottom: 3rem;
    font-size: var(--font-size-lg);
    color: var(--color-text-light);
    line-height: 1.7;
  }
</style>
