---
interface Props {
  title: string;
  description?: string;
  variant?: 'default' | 'alt';
}

const { title, description, variant = 'default' } = Astro.props;
---

<section class:list={["section", variant === 'alt' && "section-alt"]}>
  <div class="section-content">
    <h2>{title}</h2>
    {description && <p class="section-description">{description}</p>}
    <slot />
  </div>
</section>

<style>
  .section {
    padding: 6rem 2rem;
  }

  .section-content {
    max-width: 1200px;
    margin: 0 auto;
  }

  .section h2 {
    margin-bottom: 1rem;
  }

  .section-description {
    max-width: 720px;
    margin-bottom: 3rem;
    font-size: 1.15rem;
    color: var(--color-text-light);
    line-height: 1.7;
  }
</style>
