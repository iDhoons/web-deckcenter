---
import BaseLayout from '../../layouts/BaseLayout.astro';
import Card from '../../components/Card.astro';
import { getCollection } from 'astro:content';
import type { CollectionEntry } from 'astro:content';

const cases: CollectionEntry<'cases'>[] = await getCollection('cases');
---

<BaseLayout title="시공사례 | 데크센터">
  <div class="page-header">
    <h1>시공사례</h1>
    <p>다양한 현장에서 데크센터의 자재가 사용된 실제 사례입니다.</p>
  </div>

  <div class="cases-list">
    {cases.map((caseItem) => (
      <Card
        title={caseItem.data.title}
        description={caseItem.data.excerpt}
        image={caseItem.data.cover}
        link={`/cases/${caseItem.slug}`}
      />
    ))}
  </div>
</BaseLayout>

<style>
  .page-header {
    max-width: 1200px;
    margin: 0 auto;
    padding: 3rem 2rem 2rem;
    text-align: center;
  }

  .page-header h1 {
    font-size: 2.5rem;
    margin-bottom: 1rem;
  }

  .page-header p {
    font-size: 1.25rem;
    color: #666;
  }

  .cases-list {
    max-width: 1200px;
    margin: 0 auto;
    padding: 2rem;
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
    gap: 2rem;
  }
</style>
