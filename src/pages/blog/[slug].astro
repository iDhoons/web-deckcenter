---
import BaseLayout from '../../layouts/BaseLayout.astro';
import CTA from '../../components/CTA.astro';
import { getCollection } from 'astro:content';
import type { CollectionEntry } from 'astro:content';

export async function getStaticPaths() {
  const posts: CollectionEntry<'blog'>[] = await getCollection('blog');
  return posts.map((post) => ({
    params: { slug: post.slug },
    props: { post },
  }));
}

interface Props {
  post: CollectionEntry<'blog'>;
}

const { post } = Astro.props;
const { Content } = await post.render();
---

<BaseLayout
  title={`${post.data.title} | 데크센터`}
  description={post.data.excerpt}
  image={post.data.cover}
>
  <article class="mx-auto max-w-3xl px-6 py-16">
    <header class="mb-12 text-center">
      <div class="mb-4 text-sm text-gray-500">
        <time>{post.data.date.toLocaleDateString('ko-KR')}</time>
        <span class="mx-2">·</span>
        <span class="author">{post.data.author}</span>
      </div>
      <h1 class="mb-6 break-keep text-4xl font-bold">{post.data.title}</h1>
      <div class="flex justify-center gap-2">
        {post.data.tags.map((tag) => (
          <span class="font-medium text-link">#{tag}</span>
        ))}
      </div>
    </header>

    <div class="mb-12 overflow-hidden rounded-lg shadow-lg">
      <img src={post.data.cover} alt={post.data.title} class="w-full" />
    </div>

    <div
      class="prose prose-lg max-w-none"
    >
      <Content />
    </div>

    <footer class="mt-20 border-t border-border pt-12">
      <div class="mb-12">
        <a href="/blog" class="font-medium text-gray-600 transition-colors hover:text-link"
          >← 목록으로 돌아가기</a
        >
      </div>
      <div class="rounded-lg bg-bg-secondary p-12 text-center">
        <h3 class="mb-2 text-xl font-bold">직접 설계해 보세요</h3>
        <p class="mb-8 text-text-secondary">
          3D 인터페이스로 나만의 데크를 디자인하고 견적까지 확인하세요.
        </p>
        <CTA text="무료로 시작하기" link="/app" variant="primary" />
      </div>
    </footer>
  </article>
</BaseLayout>

