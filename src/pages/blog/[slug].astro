---
import BaseLayout from '../../layouts/BaseLayout.astro';
import CTA from '../../components/CTA.astro';
import { getCollection } from 'astro:content';
import type { CollectionEntry } from 'astro:content';

export async function getStaticPaths() {
  const posts: CollectionEntry<'blog'>[] = await getCollection('blog');
  return posts.map((post) => ({
    params: { slug: post.slug },
    props: { post },
  }));
}

interface Props {
  post: CollectionEntry<'blog'>;
}

const { post } = Astro.props;
const { Content } = await post.render();
---

<BaseLayout
  title={`${post.data.title} | 데크센터`}
  description={post.data.excerpt}
  image={post.data.cover}
>
  <article class="blog-post">
    <header class="post-header">
      <div class="meta">
        <time>{post.data.date.toLocaleDateString('ko-KR')}</time>
        <span class="divider">·</span>
        <span class="author">{post.data.author}</span>
      </div>
      <h1>{post.data.title}</h1>
      <div class="tags">
        {post.data.tags.map((tag) => <span class="tag">#{tag}</span>)}
      </div>
    </header>

    <div class="post-image">
      <img src={post.data.cover} alt={post.data.title} />
    </div>

    <div class="post-content">
      <Content />
    </div>

    <footer class="post-footer">
      <div class="back-to-list">
        <a href="/blog">← 목록으로 돌아가기</a>
      </div>
      <div class="cta-box">
        <h3>궁금한 점이 있으신가요?</h3>
        <p>우리 집에 딱 맞는 데크 자재를 추천해 드립니다.</p>
        <CTA text="견적 문의하기" link="https://calc.deckctr.com" variant="primary" />
      </div>
    </footer>
  </article>
</BaseLayout>

<style>
  .blog-post {
    max-width: 800px;
    margin: 0 auto;
    padding: 4rem 1.5rem;
  }

  .post-header {
    text-align: center;
    margin-bottom: 3rem;
  }

  .meta {
    color: #666;
    font-size: 0.95rem;
    margin-bottom: 1rem;
  }

  .post-header h1 {
    font-size: 2.5rem;
    margin-bottom: 1.5rem;
    word-break: keep-all;
  }

  .tags {
    display: flex;
    justify-content: center;
    gap: 0.5rem;
  }

  .tag {
    color: var(--color-accent);
    font-weight: 500;
  }

  .post-image {
    margin-bottom: 3rem;
    border-radius: 12px;
    overflow: hidden;
    box-shadow: 0 4px 20px rgba(0,0,0,0.1);
  }

  .post-content {
    font-size: 1.125rem;
    line-height: 1.8;
    color: #333;
  }

  .post-content :global(h2) {
    margin: 3rem 0 1.5rem;
    padding-bottom: 0.5rem;
    border-bottom: 2px solid var(--color-gray-200);
  }

  .post-content :global(h3) {
    margin: 2rem 0 1rem;
  }

  .post-content :global(p) {
    margin-bottom: 1.5rem;
  }

  .post-content :global(ul), .post-content :global(ol) {
    margin-bottom: 1.5rem;
    padding-left: 1.5rem;
  }

  .post-content :global(li) {
    margin-bottom: 0.5rem;
  }

  .post-content :global(blockquote) {
    margin: 2rem 0;
    padding: 1.5rem;
    background: var(--color-gray-100);
    border-left: 4px solid var(--color-accent);
    font-style: italic;
  }

  .post-footer {
    margin-top: 5rem;
    padding-top: 3rem;
    border-top: 1px solid var(--color-gray-200);
  }

  .back-to-list {
    margin-bottom: 3rem;
  }

  .back-to-list a {
    color: #666;
    font-weight: 500;
    transition: color 0.2s;
  }

  .back-to-list a:hover {
    color: var(--color-accent);
  }

  .cta-box {
    text-align: center;
    padding: 3rem;
    background: var(--color-gray-100);
    border-radius: 12px;
  }

  .cta-box h3 {
    margin-bottom: 0.5rem;
  }

  .cta-box p {
    margin-bottom: 2rem;
    color: #666;
  }

  @media (max-width: 768px) {
    .post-header h1 {
      font-size: 1.8rem;
    }
  }
</style>
