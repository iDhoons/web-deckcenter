---
import { ViewTransitions } from 'astro:transitions';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

interface Props {
  title?: string;
  description?: string;
  image?: string;
}

const {
  title = '데크센터 | 3D 데크 설계 시뮬레이터',
  description = '드래그 앤 드롭으로 쉽게 데크를 설계하고, 실시간 견적을 확인하세요.',
  image = 'https://images.unsplash.com/photo-1590059392209-799446d3283c?auto=format&fit=crop&q=80&w=1200',
} = Astro.props;

const canonicalURL = new URL(Astro.url.pathname, Astro.site || 'https://www.deckctr.com');
---

<!DOCTYPE html>
<html lang="ko" data-theme="light">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <meta name="color-scheme" content="light dark" />
    <meta name="theme-color" content="#fafafa" media="(prefers-color-scheme: light)" />
    <meta name="theme-color" content="#0c0a09" media="(prefers-color-scheme: dark)" />

    <title>{title}</title>
    <link rel="canonical" href={canonicalURL} />
    <meta name="description" content={description} />

    <!-- Preload critical fonts -->
    <link rel="preconnect" href="https://cdn.jsdelivr.net" crossorigin />
    <link rel="preload" href="https://cdn.jsdelivr.net/gh/niceplugin/Paperlogy/Paperlogy.css" as="style" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/gh/niceplugin/Paperlogy/Paperlogy.css" media="print" onload="this.media='all'" />
    <noscript><link rel="stylesheet" href="https://cdn.jsdelivr.net/gh/niceplugin/Paperlogy/Paperlogy.css"></noscript>
    
    <meta property="og:type" content="website" />
    <meta property="og:url" content={canonicalURL} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={image.startsWith('http') ? image : new URL(image, Astro.site)} />

    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content={image.startsWith('http') ? image : new URL(image, Astro.site)} />

    <ViewTransitions />
  </head>
  <body class="bg-bg font-sans text-text antialiased leading-loose">
    <a href="#main-content" class="skip-link">본문으로 건너뛰기</a>
    <Header />
    <main id="main-content" tabindex="-1">
      <slot />
    </main>
    <Footer />
  </body>
</html>

<script>
  import Lenis from 'lenis';

  let lenis: Lenis | null = null;
  let rafId: number | null = null;

  function initLenis() {
    if (lenis) {
      lenis.destroy();
    }
    if (rafId) {
      cancelAnimationFrame(rafId);
    }

    lenis = new Lenis({
      duration: 1.2,
      easing: (t: number) => Math.min(1, 1.001 - Math.pow(2, -10 * t)),
      smoothWheel: true,
    });

    function raf(time: number) {
      lenis?.raf(time);
      rafId = requestAnimationFrame(raf);
    }
    rafId = requestAnimationFrame(raf);
  }

  // 페이지 로드 후 Lenis 초기화 (FCP 개선)
  if (document.readyState === 'loading') {
    document.addEventListener('DOMContentLoaded', initLenis);
  } else {
    initLenis();
  }
  document.addEventListener('astro:page-load', initLenis);
</script>

<style is:global>
  :root {
    /* Colors - Premium Teal + Warm Stone System */

    /* Neutral Base */
    --color-black: #000000;
    --color-white: #ffffff;

    /* Primary - Deep Charcoal with Warm Undertone */
    --color-primary: #0f1419;
    --color-primary-soft: #1a2228;

    /* Accent - Premium Teal */
    --color-accent: #0d9488;
    --color-accent-light: #14b8a6;
    --color-accent-dark: #0f766e;

    /* Warm Stone Background System */
    --color-warm-50: #fafaf9;
    --color-warm-100: #f5f5f4;
    --color-warm-200: #e7e5e4;
    --color-warm-300: #d6d3d1;

    /* Semantic Colors */
    --color-text: #1a1a1a;
    --color-text-secondary: #4a5568;
    --color-text-tertiary: #718096;
    --color-text-light: #a0aec0;
    --color-bg: #fafafa;
    --color-bg-secondary: #f5f5f4;
    --color-bg-alt: #e7e5e4;
    --color-border: #e7e5e4;
    --color-link: #0d9488;

    /* Deck Material Accents */
    --color-wood-cedar: #a47e3b;
    --color-wood-oak: #8b6914;
    --color-aluminum: #9ca3af;

    /* Technical Colors (Legacy Support) */
    --color-tech-blue: #0066cc;
    --color-tech-cyan: #00a3cc;
    --color-grid: #e7e5e4;
    --color-measure: #94a3b8;

    /* Border Radius Scale - Modern */
    --radius-sm: 6px;
    --radius-md: 10px;
    --radius-lg: 16px;
    --radius-xl: 20px;
    --radius-2xl: 24px;
    --radius-full: 999px;

    /* Typography Scale - Enhanced */
    --font-size-xs: 0.75rem;
    --font-size-sm: 0.875rem;
    --font-size-base: 1rem;
    --font-size-lg: 1.125rem;
    --font-size-xl: 1.25rem;
    --font-size-2xl: 1.5rem;
    --font-size-3xl: 2rem;
    --font-size-4xl: 2.5rem;
    --font-size-5xl: 3rem;
    --font-size-h1: clamp(2.5rem, 5vw, 3.75rem);
    --font-size-h2: clamp(2rem, 3.5vw, 2.5rem);
    --font-size-h3: 1.5rem;
    --font-size-h4: 1.25rem;

    /* Line Heights - Optimized for Korean */
    --line-height-tight: 1.25;
    --line-height-normal: 1.6;
    --line-height-relaxed: 1.75;

    /* Letter Spacing */
    --letter-spacing-tight: -0.02em;
    --letter-spacing-normal: 0;
    --letter-spacing-wide: 0.02em;

    /* Font Weights */
    --font-weight-light: 300;
    --font-weight-normal: 400;
    --font-weight-medium: 500;
    --font-weight-semibold: 600;
    --font-weight-bold: 700;

    /* Layout */
    --max-width: 1200px;
    --section-spacing: 120px;
    --container-padding: 24px;

    /* Shadows - Layered Depth */
    --shadow-sm: 0 1px 3px rgba(0, 0, 0, 0.04);
    --shadow-md: 0 4px 12px rgba(0, 0, 0, 0.06);
    --shadow-lg: 0 8px 24px rgba(0, 0, 0, 0.08);
    --shadow-xl: 0 20px 40px rgba(0, 0, 0, 0.12);

    /* Transitions */
    --transition-fast: 0.15s ease;
    --transition-base: 0.2s ease;
    --transition-slow: 0.3s ease;

    /* Z-index */
    --z-header: 1000;
    --z-modal: 2000;
  }

  /* Dark Mode - Premium Dark */
  [data-theme="dark"] {
    /* Semantic Colors */
    --color-text: #f5f5f4;
    --color-text-secondary: #d6d3d1;
    --color-text-tertiary: #a8a29e;
    --color-text-light: #78716c;

    /* Stone Dark Background System */
    --color-bg: #0c0a09;
    --color-bg-secondary: #1c1917;
    --color-bg-alt: #292524;

    --color-border: #292524;
    --color-link: #2dd4bf;

    /* Accent - Bright Teal for Dark Mode */
    --color-accent: #2dd4bf;
    --color-accent-light: #5eead4;
    --color-accent-dark: #14b8a6;

    /* Warm Stone in Dark Mode */
    --color-warm-50: #1c1917;
    --color-warm-100: #292524;
    --color-warm-200: #44403c;
    --color-warm-300: #57534e;

    /* Primary Colors */
    --color-primary: #f5f5f4;
    --color-primary-soft: #e7e5e4;

    /* Deck Material Accents - Adjusted for Dark */
    --color-wood-cedar: #c9a86c;
    --color-wood-oak: #a89040;
    --color-aluminum: #d6d3d1;
  }

  * {
    box-sizing: border-box;
    margin: 0;
    padding: 0;
  }

  html {
    scroll-behavior: smooth;
    scrollbar-gutter: stable;
  }

  html.lenis, html.lenis body {
    height: auto;
  }

  main {
    min-height: 70vh;
  }

  img {
    max-width: 100%;
    height: auto;
    display: block;
  }

  a {
    text-decoration: none;
    color: inherit;
  }

  /* Buttons */
  .btn {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    gap: 0.5rem;
    border-radius: var(--radius-md);
    padding: 0.875rem 1.75rem;
    text-align: center;
    font-size: var(--font-size-base);
    font-weight: 600;
    cursor: pointer;
    text-decoration: none;
    transition: var(--transition-base);
  }

  .btn-primary {
    border: none;
    background: var(--color-accent);
    color: var(--color-white);
  }
  .btn-primary:hover {
    background: var(--color-accent-dark);
  }

  .btn-secondary {
    border: 1px solid var(--color-border);
    background: transparent;
    color: var(--color-text);
  }
  .btn-secondary:hover {
    border-color: var(--color-accent);
    color: var(--color-accent);
  }

  /* Dark mode button adjustments */
  [data-theme="dark"] .btn-primary {
    background: var(--color-accent);
    color: var(--color-bg);
  }
  [data-theme="dark"] .btn-primary:hover {
    background: var(--color-accent-dark);
  }
  [data-theme="dark"] .btn-secondary {
    border-color: var(--color-warm-200);
    color: var(--color-text);
  }
  [data-theme="dark"] .btn-secondary:hover {
    border-color: var(--color-accent);
    color: var(--color-accent);
  }

  /* Skip Link */
  .skip-link {
    position: absolute;
    top: -100%;
    left: 50%;
    transform: translateX(-50%);
    background: var(--color-black);
    color: var(--color-white);
    padding: 1rem 2rem;
    border-radius: 0 0 8px 8px;
    font-weight: 500;
    z-index: 9999;
    transition: top var(--transition-base);
  }

  .skip-link:focus {
    top: 0;
    outline: none;
  }

  /* Focus - Enhanced for Accessibility */
  :focus-visible {
    outline: 3px solid var(--color-accent);
    outline-offset: 3px;
    border-radius: 2px;
  }

  /* Button focus styles */
  .btn:focus-visible,
  .cta:focus-visible {
    outline: 3px solid var(--color-accent);
    outline-offset: 2px;
    box-shadow: 0 0 0 4px rgba(0, 102, 204, 0.2);
  }

  /* Link focus styles */
  a:focus-visible {
    outline: 2px solid var(--color-accent);
    outline-offset: 2px;
    text-decoration: underline;
  }

  main:focus {
    outline: none;
  }

  /* Responsive */
  @media (min-width: 1440px) {
    :root {
      --container-padding: 48px;
      --section-spacing: 160px;
    }
  }

  @media (max-width: 1024px) {
    :root {
      --section-spacing: 100px;
    }
  }

  @media (max-width: 768px) {
    :root {
      --section-spacing: 80px;
      --container-padding: 20px;
    }
  }

  @media (max-width: 480px) {
    :root {
      --section-spacing: 64px;
      --container-padding: 16px;
    }
  }

  /* Reduced Motion - 접근성 */
  @media (prefers-reduced-motion: reduce) {
    *,
    *::before,
    *::after {
      animation-duration: 0.01ms !important;
      animation-iteration-count: 1 !important;
      transition-duration: 0.01ms !important;
      scroll-behavior: auto !important;
    }
  }

  /* 제목 텍스트 밸런스 */
  h1, h2, h3 {
    text-wrap: balance;
  }
</style>
