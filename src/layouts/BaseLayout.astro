---
import { ViewTransitions } from 'astro:transitions';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import Splash from '../components/Splash.astro';
import ChatButton from '../components/ChatButton.astro';

interface Props {
  title?: string;
  description?: string;
  image?: string;
}

const {
  title = '데크센터 | 외장 데크재 전문',
  description = '목재·합성목·알루미늄 데크까지, 현장에 맞는 최적 솔루션 제안',
  image = 'https://images.unsplash.com/photo-1590059392209-799446d3283c?auto=format&fit=crop&q=80&w=1200',
} = Astro.props;

const canonicalURL = new URL(Astro.url.pathname, Astro.site || 'https://www.deckctr.com');
---

<!DOCTYPE html>
<html lang="ko" data-theme="light">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />

    <link rel="canonical" href={canonicalURL} />
    <meta name="description" content={description} />

    <meta property="og:type" content="website" />
    <meta property="og:url" content={canonicalURL} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={image.startsWith('http') ? image : new URL(image, Astro.site)} />

    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content={image.startsWith('http') ? image : new URL(image, Astro.site)} />

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/gh/niceplugin/Paperlogy/Paperlogy.css" />
    <ViewTransitions />
  </head>
  <body>
    <a href="#main-content" class="skip-link">본문으로 건너뛰기</a>
    <Splash />
    <Header />
    <main id="main-content" tabindex="-1">
      <slot />
    </main>
    <Footer />
    <ChatButton />
  </body>
</html>

<script>
  import Lenis from 'lenis';

  let lenis: Lenis | null = null;
  let rafId: number | null = null;

  function initLenis() {
    // 기존 인스턴스 정리
    if (lenis) {
      lenis.destroy();
    }
    if (rafId) {
      cancelAnimationFrame(rafId);
    }

    lenis = new Lenis({
      duration: 1.2,
      easing: (t: number) => Math.min(1, 1.001 - Math.pow(2, -10 * t)),
      smoothWheel: true,
    });

    function raf(time: number) {
      lenis?.raf(time);
      rafId = requestAnimationFrame(raf);
    }
    rafId = requestAnimationFrame(raf);
  }

  // 첫 로드
  initLenis();

  // View Transitions 후 재초기화
  document.addEventListener('astro:page-load', initLenis);
</script>

<script>
  function initTheme() {
    const savedTheme = localStorage.getItem('theme');
    const prefersDark = window.matchMedia('(prefers-color-scheme: dark)').matches;
    const theme = savedTheme || (prefersDark ? 'dark' : 'light');
    document.documentElement.setAttribute('data-theme', theme);
  }

  function toggleTheme() {
    const currentTheme = document.documentElement.getAttribute('data-theme');
    const newTheme = currentTheme === 'dark' ? 'light' : 'dark';
    document.documentElement.setAttribute('data-theme', newTheme);
    localStorage.setItem('theme', newTheme);
    updateThemeToggleButton();
  }

  function updateThemeToggleButton() {
    const isDark = document.documentElement.getAttribute('data-theme') === 'dark';
    const buttons = document.querySelectorAll('.theme-toggle');
    buttons.forEach((btn) => {
      const sunIcon = btn.querySelector('.sun-icon');
      const moonIcon = btn.querySelector('.moon-icon');
      if (sunIcon && moonIcon) {
        sunIcon.style.display = isDark ? 'none' : 'block';
        moonIcon.style.display = isDark ? 'block' : 'none';
      }
      btn.setAttribute('aria-label', isDark ? '라이트 모드로 전환' : '다크 모드로 전환');
    });
  }

  // 초기화
  initTheme();

  // 페이지 로드 시
  document.addEventListener('DOMContentLoaded', () => {
    updateThemeToggleButton();
    document.querySelectorAll('.theme-toggle').forEach((btn) => {
      btn.addEventListener('click', toggleTheme);
    });
  });

  // View Transitions 후
  document.addEventListener('astro:page-load', () => {
    initTheme();
    updateThemeToggleButton();
    document.querySelectorAll('.theme-toggle').forEach((btn) => {
      btn.addEventListener('click', toggleTheme);
    });
  });

  // 시스템 테마 변경 감지
  window.matchMedia('(prefers-color-scheme: dark)').addEventListener('change', (e) => {
    if (!localStorage.getItem('theme')) {
      document.documentElement.setAttribute('data-theme', e.matches ? 'dark' : 'light');
      updateThemeToggleButton();
    }
  });
</script>

<style is:global>
  :root {
    /* Colors */
    --color-primary: #1a1a1a;
    --color-secondary: #404040;
    --color-accent: #004250;
    --color-accent-light: #005a6e;
    --color-text: #333333;
    --color-text-light: #595959; /* WCAG AA 준수로 변경 */
    --color-bg: #ffffff;
    --color-bg-alt: #F8FAFB;
    --color-gray-50: #fafafa;
    --color-gray-100: #f5f5f5;
    --color-gray-200: #eeeeee;

    /* Spacing Scale */
    --spacing-xs: 0.25rem;
    --spacing-sm: 0.5rem;
    --spacing-md: 1rem;
    --spacing-lg: 1.5rem;
    --spacing-xl: 2rem;
    --spacing-2xl: 3rem;
    --spacing-3xl: 4rem;

    /* Shadow Scale */
    --shadow-sm: 0 1px 2px rgba(0,0,0,0.05);
    --shadow-md: 0 4px 12px rgba(0,0,0,0.08);
    --shadow-lg: 0 8px 24px rgba(0,0,0,0.12);
    --shadow-xl: 0 12px 32px rgba(0,0,0,0.15);

    /* Z-index Scale */
    --z-base: 1;
    --z-dropdown: 100;
    --z-sticky: 1000;
    --z-modal: 2000;
    --z-splash: 10000;

    /* Typography Scale */
    --font-size-xs: 0.75rem;
    --font-size-sm: 0.875rem;
    --font-size-base: 1rem;
    --font-size-lg: 1.125rem;
    --font-size-xl: 1.25rem;
    --font-size-2xl: 1.5rem;
    --font-size-3xl: 2rem;
    --font-size-4xl: 2.5rem;
    --font-size-5xl: 3.5rem;

    /* Layout */
    --max-width: 1200px;
    --transition: all 0.3s ease;

    /* Breakpoints (for reference in documentation) */
    /* --bp-xs: 480px;   Small mobile */
    /* --bp-sm: 640px;   Mobile landscape */
    /* --bp-md: 768px;   Tablet */
    /* --bp-lg: 900px;   Small desktop */
    /* --bp-xl: 1024px;  Desktop */
    /* --bp-2xl: 1280px; Large desktop */
    /* --bp-3xl: 1440px; Extra large desktop */
  }

  /* Dark Theme */
  [data-theme="dark"] {
    --color-primary: #f5f5f5;
    --color-secondary: #d4d4d4;
    --color-accent: #00a3cc;
    --color-accent-light: #00c4f0;
    --color-text: #e5e5e5;
    --color-text-light: #a3a3a3;
    --color-bg: #0f0f0f;
    --color-bg-alt: #1a1a1a;
    --color-gray-50: #171717;
    --color-gray-100: #262626;
    --color-gray-200: #404040;

    --shadow-sm: 0 1px 2px rgba(0,0,0,0.3);
    --shadow-md: 0 4px 12px rgba(0,0,0,0.4);
    --shadow-lg: 0 8px 24px rgba(0,0,0,0.5);
    --shadow-xl: 0 12px 32px rgba(0,0,0,0.6);
  }

  * {
    box-sizing: border-box;
    margin: 0;
    padding: 0;
  }

  html {
    scroll-behavior: smooth;
  }

  html.lenis, html.lenis body {
    height: auto;
  }

  body {
    font-family: "Paperlogy", -apple-system, BlinkMacSystemFont, system-ui, "Apple SD Gothic Neo", "Noto Sans KR", "Malgun Gothic", sans-serif;
    font-weight: 400;
    color: var(--color-text);
    background: var(--color-bg);
    line-height: 1.7;
    -webkit-font-smoothing: antialiased;
  }

  main {
    min-height: 70vh;
  }

  img {
    max-width: 100%;
    height: auto;
    display: block;
  }

  a {
    text-decoration: none;
    color: inherit;
  }

  a:hover {
    text-decoration: none;
  }

  h1, h2, h3, h4 {
    color: var(--color-primary);
    font-weight: 800;
    line-height: 1.15;
    letter-spacing: -0.02em;
  }

  h1 {
    font-size: 3.5rem;
  }

  h2 {
    font-size: 2.5rem;
    font-weight: 700;
  }

  h3 {
    font-size: 1.35rem;
    font-weight: 600;
  }

  /* Extra large screens */
  @media (min-width: 1440px) {
    :root {
      --font-size-5xl: 4rem;
      --font-size-4xl: 3rem;
    }

    h1 {
      font-size: var(--font-size-5xl);
    }

    h2 {
      font-size: var(--font-size-4xl);
    }

    .container {
      max-width: 1400px;
    }
  }

  /* Large desktop */
  @media (max-width: 1280px) {
    h1 {
      font-size: 3rem;
    }
  }

  /* Desktop */
  @media (max-width: 1024px) {
    h1 {
      font-size: 2.75rem;
    }

    section {
      padding: 5rem 0;
    }
  }

  /* Tablet */
  @media (max-width: 768px) {
    h1 {
      font-size: 2.25rem;
    }
    h2 {
      font-size: 1.75rem;
    }

    section {
      padding: 4rem 0;
    }
  }

  /* Mobile landscape */
  @media (max-width: 640px) {
    h1 {
      font-size: 2rem;
    }

    h2 {
      font-size: 1.5rem;
    }

    section {
      padding: 3rem 0;
    }

    .container {
      padding: 0 1rem;
    }
  }

  /* Small mobile */
  @media (max-width: 480px) {
    h1 {
      font-size: 1.75rem;
    }

    h2 {
      font-size: 1.35rem;
    }

    h3 {
      font-size: 1.15rem;
    }

    section {
      padding: 2.5rem 0;
    }

    .btn {
      padding: 0.7rem 1.5rem;
      font-size: 0.9rem;
    }
  }

  .container {
    max-width: var(--max-width);
    margin: 0 auto;
    padding: 0 1.5rem;
  }

  .btn {
    display: inline-block;
    padding: 0.8rem 2rem;
    border-radius: 6px;
    font-weight: 600;
    text-align: center;
    cursor: pointer;
    transition: var(--transition);
    text-decoration: none;
  }

  .btn-primary {
    background: linear-gradient(135deg, var(--color-accent) 0%, var(--color-accent-light) 100%);
    color: white;
    box-shadow: 0 4px 14px rgba(0, 66, 80, 0.3);
  }

  .btn-primary:hover {
    background: linear-gradient(135deg, var(--color-accent-light) 0%, var(--color-accent) 100%);
    transform: translateY(-3px);
    box-shadow: 0 6px 20px rgba(0, 66, 80, 0.4);
  }

  section {
    padding: 6rem 0;
  }

  section.section-alt {
    background: linear-gradient(180deg, var(--color-bg-alt) 0%, var(--color-bg) 100%);
  }

  /* Skip Link - 접근성 */
  .skip-link {
    position: absolute;
    top: -100%;
    left: 50%;
    transform: translateX(-50%);
    background: var(--color-accent);
    color: white;
    padding: 1rem 2rem;
    border-radius: 0 0 8px 8px;
    font-weight: 600;
    text-decoration: none;
    z-index: var(--z-splash);
    transition: top 0.2s ease;
  }

  .skip-link:focus {
    top: 0;
    outline: none;
  }

  /* Focus Indicators - 접근성 */
  :focus-visible {
    outline: 2px solid var(--color-accent);
    outline-offset: 2px;
  }

  a:focus-visible,
  button:focus-visible,
  input:focus-visible,
  select:focus-visible,
  textarea:focus-visible {
    outline: 2px solid var(--color-accent);
    outline-offset: 2px;
  }

  /* main 포커스 시 outline 제거 (skip link 대상) */
  main:focus {
    outline: none;
  }

  /* Reduced Motion - 접근성 */
  @media (prefers-reduced-motion: reduce) {
    *,
    *::before,
    *::after {
      animation-duration: 0.01ms !important;
      animation-iteration-count: 1 !important;
      transition-duration: 0.01ms !important;
      scroll-behavior: auto !important;
    }
  }
</style>
